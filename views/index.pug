        .container#header-panel-container
            .row
                .col-xl-12
                    .panel.panel-default#header-panel
                        .panel-text
                            .container#header.collapse.in
                                .row
                                    .col-sm-3
                                        h3 Division&nbsp;
                                            i.fa.fa-spinner.fa-spin#spinner-divisions.hidden
                                    .col-sm-5
                                        h3 Species&nbsp;
                                            i.fa.fa-spinner.fa-spin#spinner-species.hidden
                                    .col-sm-3
                                        h3 Karyotype&nbsp;
                                            i.fa.fa-spinner.fa-spin#spinner-karyotype.hidden
                                    .col-sm-1
                                .row
                                    .col-sm-3
                                        select.selectpicker#select-divisions(title="Select a Division..." data-width="100%")
                                    .col-sm-5
                                        select.selectpicker#select-species(title="Select a Species..." data-live-search="true" data-width="100%" disabled)
                                    .col-sm-3
                                        select.selectpicker#select-karyotypes(title="Select a Karyotype..." multiple data-width="100%" disabled)
                                    .col-sm-1
                                        button.btn.btn-success#btn-add.w-100(disabled)
                                            i.fa.fa-plus.center
                                .row
                                    .container-fluid#list
                                .row
                                    .col-sm-1.col-sm-push-11
                                        button.btn.btn-primary#btn-done.hidden.w-100
                                            i.fa.fa-check.center#btn-done-check
                                            i.fa.fa-spinner.fa-spin#btn-done-spinner.hidden
                            button.btn.btn-link#btn-collapse(data-toggle="collapse" data-target="#header")
